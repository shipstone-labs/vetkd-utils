{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "env": ["NODE_ENV", "DFX_NETWORK"],
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "pgk/**", "target/debug/**", "target/**/debug/**"]
    },
    "build:release": {
      "env": ["NODE_ENV", "DFX_NETWORK"],
      "dependsOn": ["^build:release"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        "dist/**",
        "pgk/**",
        "target/release/**",
        "target/**/release/**"
      ]
    },
    "@shipstone-labs/vetkd-notes-client:build": {
      "dependsOn": ["^vetkd-notes-canister:build"]
    },
    "@shipstone-labs/vetkd-notes-client:build:release": {
      "dependsOn": ["^vetkd-notes-canister:build:release"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
